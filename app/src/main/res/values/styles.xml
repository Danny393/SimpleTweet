<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="colorPrimary">@color/backgroundPrimary</item>
        <item name="android:colorBackground">@color/backgroundPrimary</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="titleTextColor">@color/accentColor</item>
        <item name="colorControlNormal">@color/textPrimary</item>
        <item name="colorControlActivated">@color/accentColor</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>
